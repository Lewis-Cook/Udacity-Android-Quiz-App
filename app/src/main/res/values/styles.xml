<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Headers">
        <item name="android:fontFamily">@font/indie_flower</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="Headers.Blue">
        <item name="android:textColor">#283593</item>
    </style>

    <style name="Headers.Orange">
        <item name="android:textColor">#e64a19</item>
    </style>

    <style name="Answers">
        <item name="android:fontFamily">@font/just_another_hand</item>
        <item name="android:textSize">30sp</item>
    </style>



</resources>
